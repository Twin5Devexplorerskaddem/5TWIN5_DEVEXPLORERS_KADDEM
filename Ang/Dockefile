
FROM node:14 as build

WORKDIR /app

COPY package.json ./
COPY package-lock.json ./


RUN npm install --f

COPY . .


RUN npm run build --prod


FROM nginx:alpine


COPY --from=build /app/dist/monster-angular-lite /usr/share/nginx/html


COPY nginx.conf /etc/nginx/conf.d/default.conf


EXPOSE 80


CMD ["nginx", "-g", "daemon off;"]
